<h1>
  List of all directors
</h1>

<hr>
<form action="/directors/add" method=post>

<div> <label for= "director_name_field">Name</label>
<input id="director_name_field" name="director_name_param"></div>
<div> <label for= "director_dob_field">Dob</label>
<input type= date id="director_dob_field" name="director_dob_param"></div>
<div> <label for= "director_bio_field">Bio</label>
<textarea id="director_bio_field" rows=3 name="director_bio_param"></textarea></div>
<div> <label for= "director_image_field">Image</label>
<input id="director_image_field" name="director_image_param"></div>

<button>Create director</button>

</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
